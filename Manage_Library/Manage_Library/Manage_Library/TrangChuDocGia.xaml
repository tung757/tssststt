<Window x:Class="Manage_Library.trangChuDocGia" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manage_Library"
        mc:Ignorable="d"
        Title="Thư viện online" SizeToContent="Height" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f0f0f0">
        <!-- Menu tab -->
        <TabControl Margin="20" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Mượn sách" Loaded="TabItem_Loaded">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tìm kiếm sách -->
                        <Border Margin="5" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10" Background="#fff">
                            <StackPanel Margin="10">
                                <GroupBox Header="Tìm kiếm sách" Padding="10" Background="#f7f7f7">
                                    <StackPanel>
                                        <GroupBox Header="Tìm kiếm theo:" Background="#f7f7f7">
                                            <ComboBox Name="fieldsCBBox" FontSize="16">
                                                <ComboBoxItem IsSelected="True">Thể loại</ComboBoxItem>
                                                <ComboBoxItem>Mã sách</ComboBoxItem>
                                                <ComboBoxItem>Tên sách</ComboBoxItem>
                                                <ComboBoxItem>Tên tác giả</ComboBoxItem>
                                            </ComboBox>
                                        </GroupBox>
                                        <GroupBox Margin="0,15,0,0" Header="Nhập từ khóa tìm kiếm" Background="#f7f7f7">
                                            <TextBox x:Name="keyword" FontSize="18" Margin="5" Padding="5" />
                                        </GroupBox>
                                        
                                        <Button x:Name="searchBtn" Width="100" HorizontalAlignment="Right" Margin="0,15,0,0" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="1" Click="searchBtn_Click">Tìm</Button>
                                        <Button Width="100" HorizontalAlignment="Right" Margin="0,15,0,0" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="1" Click="Button_Click_1" >Hien thi</Button>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Border>

                        <!-- Thông tin chi tiết sách -->
                        <Border Margin="5" Grid.Column="1" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10" Background="#fff">
                            <StackPanel Margin="10">
                                <TextBlock Margin="0,0,0,15" FontSize="15" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" >Thông tin chi tiết sách</TextBlock>
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                                        <!-- Ảnh -->
                                        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" HorizontalAlignment="Center">
                                            <Image Source="Image/anhBiaPlaceHolder.png" Width="200" Height="150" Stretch="Uniform"/>
                                        </Border>

                                        <!-- Mô tả ảnh -->
                                        <TextBlock Text="Ảnh bìa" HorizontalAlignment="Center" FontSize="14" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0" />
                                    </StackPanel>
                                    <StackPanel>
                                        <WrapPanel Margin="0,10,0,0" VerticalAlignment="Center">
                                            <Label>Mã sách:</Label>
                                            <TextBlock Height="20" x:Name="bookId"/>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label>Nhà xuất bản:</Label>
                                            <TextBlock Height="20" x:Name="bookNhXB"/>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label>Năm xuất bản:</Label>
                                            <TextBlock Height="20" x:Name="bookNXB"/>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label>Ngôn ngữ:</Label>
                                            <TextBlock Height="20" x:Name="bookLanguage"/>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label>Giá tiền:</Label>
                                            <TextBlock Height="20" x:Name="bookPrice"/>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label>Số lượng còn lại:</Label>
                                            <TextBlock Height="20" x:Name="bookAmounts"/>
                                        </WrapPanel>
                                
                                    </StackPanel>
                                </DockPanel>
                                <Button HorizontalAlignment="Right" Width="100" Margin="0,15,30,0" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="1" Click="Button_Click_2">Mượn</Button>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Kết quả tìm kiếm -->
                    <Border Margin="5" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10">
                        <StackPanel Height="200" Margin="5">
                            <Label x:Name="lbhienthids" Foreground="#4CAF50" FontWeight="Heavy" Margin="0,0,0,10">Danh sách</Label>
                            <DataGrid SelectionChanged="dsSach_SelectionChanged" x:Name="dsSach" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã sách" Binding="{Binding MaSach}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Tên Sách" Binding="{Binding TenSach}" Width="Auto" MinWidth="150"/>
                                    <DataGridTextColumn Header="Nhà xuất bản" Binding="{Binding NhaXuatBan}" Width="Auto" MinWidth="150"/>
                                    <DataGridTextColumn Header="Năm xuất bản" Binding="{Binding NamXuatBan}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Ngôn ngữ" Binding="{Binding NgonNgu}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Giá tiền" Binding="{Binding GiaTien}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Số lượng còn lại" Binding="{Binding SoLuongConLai}" Width="Auto" MinWidth="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
            <TabItem Header="Sách đang mượn" Loaded="TabItem_Loaded_1">
                <Grid>
                    <Border Margin="5" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10">
                        <StackPanel Height="Auto" MinHeight="200" Margin="5">
                            <TextBlock Foreground="#4CAF50" FontWeight="Heavy" Margin="0,0,0,10">Các quyển sách đang mượn</TextBlock>
                            <DataGrid x:Name="dgBorrowing" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã sách" Binding="{Binding MaSach}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Ngày mượn" Binding="{Binding NgayMuon}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Ngày trả" Binding="{Binding NgayTra}" Width="Auto" MinWidth="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Sách đã mượn" Loaded="TabItem_Loaded_2">
                <Grid>
                    <Border Margin="5" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10">
                        <StackPanel Height="Auto" MinHeight="200" Margin="5">
                            <TextBlock Foreground="#4CAF50" FontWeight="Heavy" Margin="0,0,0,10">Các quyển sách đã mượn</TextBlock>
                            <DataGrid x:Name="dgHistoriBorrow" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã lịch sử" Binding="{Binding MaTh}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Ngày mượn" Binding="{Binding NgayMuon}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="Tên sách" Binding="{Binding TenSach}" Width="Auto" MinWidth="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Đăng xuất">
                <StackPanel>
                    <Label x:Name="txttendn">Tên đăng nhập :</Label>
                    <Label x:Name="txttennguoidung">Tên người dùng :</Label>
                    <Label x:Name="txtmatkhau">Mật khẩu :</Label>
                    <Button HorizontalAlignment="Right" Width="100" Margin="0,15,30,0" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="1" Click="Button_Click">Đăng xuất</Button>
                </StackPanel>
            </TabItem>
          

        </TabControl>
    </Grid>
</Window>
