<Window x:Class="Manage_Library.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manage_Library"
        mc:Ignorable="d"
        Title="DangNhap" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Window.Background>
        <SolidColorBrush Color="#FAF3E0" />
    </Window.Background>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Padding" Value="15,5,15,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </Window.Resources>
    <DockPanel Margin="20">
        <!-- Tiêu đề -->
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="30" Foreground="DarkBlue" Margin="0,0,0,20" TextAlignment="Center">
        Đăng nhập
        </TextBlock>

        <!-- Hình ảnh -->
        <Image Source="Image/logIn.jpg" DockPanel.Dock="Left"  Width="200" Height="250"/>

        <!-- Form Đăng nhập -->
        <StackPanel Margin="20,0,0,0" HorizontalAlignment="Stretch">
            <StackPanel.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Margin" Value="0,0,0,20"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Width" Value="250"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="Padding" Value="0,3,0,3"/>
                </Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Width" Value="250"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="Padding" Value="0,3,0,3"/>
                </Style>
            </StackPanel.Resources>

            <!-- Tên đăng nhập -->
            <StackPanel>
                <Label>Tên đăng nhập:</Label>
                <TextBox x:Name="accountName" ></TextBox>
            </StackPanel>

            <!-- Mật khẩu -->
            <StackPanel>
                <Label>Mật khẩu:</Label>
                <PasswordBox x:Name="password"></PasswordBox>
            </StackPanel>

            <!-- Chọn loại tài khoản -->
            <StackPanel>
                <Label>Bạn là:</Label>
                <WrapPanel>
                    <RadioButton x:Name="thuThu" GroupName="accountType">Thủ thư</RadioButton>
                    <RadioButton x:Name="docGia" GroupName="accountType" IsChecked="True">Độc giả</RadioButton>
                </WrapPanel>
            </StackPanel>

            <!-- Nút thao tác -->
            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="login" Content="Đăng nhập" Click="login_Click"/>
                <Button x:Name="exit" Content="Thoát" Click="exit_Click"/>
            </WrapPanel>
        </StackPanel>
    </DockPanel>
</Window>
